<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_margin_override_wizard_form" model="ir.ui.view">
        <field name="name">margin.override.wizard.form</field>
        <field name="model">margin.override.wizard</field>
        <field name="arch" type="xml">
            <form string="Marge Afwijking Aanvragen">
                <group>
                    <group>
                        <field name="product_id" invisible="1"/>
                        <field name="product_name"/>
                        <field name="current_purchase_price" widget="monetary"/>
                        <field name="current_sale_price" widget="monetary"/>
                    </group>
                    <group>
                        <field name="current_margin" widget="percentage"/>
                        <field name="requested_margin" widget="percentage"/>
                        <field name="end_date"/>
                    </group>
                </group>
                
                <group string="Berekende Nieuwe Prijzen">
                    <group>
                        <field name="calculated_new_price" widget="monetary" readonly="1"/>
                        <field name="manual_price" widget="monetary" placeholder="Optioneel: vul handmatig in om berekening te overschrijven"/>
                        <field name="final_price" widget="monetary" readonly="1" class="fw-bold"/>
                    </group>
                    <group>
                        <field name="price_difference" widget="monetary" 
                               decoration-danger="price_difference &lt; 0"
                               decoration-success="price_difference &gt; 0"/>
                        <field name="price_difference_percentage" widget="percentage"
                               decoration-danger="price_difference_percentage &lt; -10"
                               decoration-warning="price_difference_percentage &lt; 0 and price_difference_percentage &gt;= -10"
                               decoration-success="price_difference_percentage &gt; 0"/>
                    </group>
                </group>

                <group>
                    <field name="reason" placeholder="Leg uit waarom deze afwijkende marge nodig is..."/>
                </group>

                <group>
                    <group>
                        <field name="requires_approval" invisible="1"/>
                        <field name="approved" widget="boolean_toggle" 
                               string="âœ“ Ik geef expliciet akkoord voor deze afwijking"/>
                    </group>
                </group>

                <div class="alert alert-info" role="alert">
                    <p><strong>Let op:</strong></p>
                    <ul>
                        <li>Deze afwijking vereist expliciete goedkeuring</li>
                        <li>De afwijking wordt gelogd in de product geschiedenis</li>
                        <li invisible="not end_date">De afwijking vervalt automatisch op de einddatum</li>
                        <li>U kunt de berekende prijs direct toepassen of later handmatig aanpassen</li>
                    </ul>
                </div>

                <footer>
                    <button string="Goedkeuren en Toepassen" 
                            name="action_approve_and_apply" 
                            type="object" 
                            class="btn-primary"
                            data-hotkey="v"/>
                    <button string="Annuleren" 
                            name="action_cancel" 
                            type="object" 
                            class="btn-secondary"
                            data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
