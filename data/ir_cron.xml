<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Scheduled Action voor automatisch resetten van verlopen marge afwijkingen -->
    <record id="ir_cron_check_expired_margin_overrides" model="ir.cron">
        <field name="name">Product Price Margin: Check Expired Margin Overrides</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">model.cron_check_expired_margin_overrides()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>

    <!-- Scheduled Action voor automatische prijsherberekening -->
    <record id="ir_cron_recalculate_product_prices" model="ir.cron">
        <field name="name">Product Price Margin: Recalculate Product Prices</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">model.cron_recalculate_product_prices()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="active" eval="True"/>
    </record>

    <!-- Scheduled Action voor automatische prijsherberekening -->
    <record id="ir_cron_recalculate_product_prices" model="ir.cron">
        <field name="name">Product Price Margin: Recalculate Product Prices</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">model.cron_recalculate_product_prices()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="active" eval="True"/>
    </record>

</odoo>
