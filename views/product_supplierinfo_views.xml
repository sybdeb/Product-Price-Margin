<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Product Supplierinfo Tree View met Sequence Handle -->
    <record id="product_supplierinfo_tree_view_inherit" model="ir.ui.view">
        <field name="name">product.supplierinfo.tree.inherit.sequence</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
        <field name="arch" type="xml">
            <!-- Voeg sequence handle toe aan het begin -->
            <field name="partner_id" position="before">
                <field name="sequence" widget="handle"/>
            </field>
            <!-- Voeg active en stock toe -->
            <field name="price" position="after">
                <field name="supplier_stock" optional="show"/>
                <field name="active" widget="boolean_toggle" optional="show"/>
            </field>
        </field>
    </record>

</odoo>
