<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- List View -->
    <record id="view_product_margin_config_tree" model="ir.ui.view">
        <field name="name">product.margin.config.tree</field>
        <field name="model">product.margin.config</field>
        <field name="arch" type="xml">
            <list string="Marge Configuraties">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="config_type"/>
                <field name="brand_name" optional="show"/>
                <field name="margin_percentage" decoration-info="margin_percentage &gt; 0"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_product_margin_config_form" model="ir.ui.view">
        <field name="name">product.margin.config.form</field>
        <field name="model">product.margin.config</field>
        <field name="arch" type="xml">
            <form string="Marge Configuratie">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="config_type" widget="radio"/>
                        </group>
                        <group>
                            <field name="margin_percentage" widget="percentage"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="brand_id" invisible="config_type != 'brand'" required="config_type == 'brand'"/>
                            <field name="public_categ_id" invisible="config_type != 'category'" required="config_type == 'category'"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="product_margin_config_view_search" model="ir.ui.view">
        <field name="name">product.margin.config.view.search</field>
        <field name="model">product.margin.config</field>
        <field name="arch" type="xml">
            <search string="Search Margin Configurations">
                <field name="name" string="Name"/>
                <field name="config_type" string="Type"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_product_margin_config" model="ir.actions.act_window">
        <field name="name">Marge Configuraties</field>
        <field name="res_model">product.margin.config</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Maak uw eerste marge configuratie
            </p>
            <p>
                Configureer marges per merk of webshop categorie om automatisch verkoopprijzen te berekenen.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_product_margin_root"
              name="Marge Beheer"
              parent="sale.product_menu_catalog"
              sequence="50"/>
    
    <menuitem id="menu_product_margin_config"
              name="Marge Configuraties"
              parent="menu_product_margin_root"
              action="action_product_margin_config"
              sequence="10"/>

</odoo>
