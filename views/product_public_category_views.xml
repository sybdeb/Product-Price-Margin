<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Public Category Form View to add Margin -->
    <record id="view_public_category_form_inherit_margin" model="ir.ui.view">
        <field name="name">product.public.category.form.inherit.margin</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="website_sale.product_public_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <group string="Marge Configuratie" groups="base.group_user">
                    <group>
                        <field name="margin_percentage" widget="percentage"/>
                    </group>
                </group>
                
                <group string="Leverancier Selectie" groups="base.group_user">
                    <group>
                        <field name="supplier_selection_mode" widget="radio"/>
                        <field name="min_stock_threshold" invisible="supplier_selection_mode != 'auto_price_stock'"/>
                        <field name="fallback_no_stock" invisible="supplier_selection_mode != 'auto_price_stock'"/>
                    </group>
                    <group>
                        <field name="supplier_tiebreaker" invisible="supplier_selection_mode == 'manual'"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Inherit Public Category List View -->
    <record id="view_public_category_tree_inherit_margin" model="ir.ui.view">
        <field name="name">product.public.category.tree.inherit.margin</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="website_sale.product_public_category_tree_view"/>
        <field name="arch" type="xml">
            <list position="inside">
                <field name="margin_percentage" optional="show" widget="percentage"/>
            </list>
        </field>
    </record>

</odoo>
